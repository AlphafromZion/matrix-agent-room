# matrix-agent-room: Model Configuration
# Copy this to config.yaml and customize for your setup.

homeserver:
  url: "http://synapse:8008"

# Define your AI models ‚Äî each one becomes a Matrix bot
models:
  - name: "alpha"
    display_name: "Alpha üê∫"
    matrix_user: "@alpha:yourdomain.com"
    password_env: "ALPHA_BOT_PASSWORD"       # Read password from environment variable
    backend: "openai"                        # openai | ollama | anthropic | custom
    api_url: "https://api.anthropic.com/v1"
    api_key_env: "ANTHROPIC_API_KEY"         # Read API key from environment variable
    model: "claude-sonnet-4-5"
    system_prompt: "You are Alpha, a sharp AI assistant. Direct, technical, opinionated about privacy and self-hosting."
    max_tokens: 2048
    temperature: 0.7

  - name: "qwen"
    display_name: "Qwen üîÆ"
    matrix_user: "@qwen:yourdomain.com"
    password_env: "QWEN_BOT_PASSWORD"
    backend: "ollama"
    api_url: "http://ollama:11434"
    model: "qwen2.5-vl:7b"
    system_prompt: "You are Qwen, a vision-capable AI. You excel at image analysis, visual reasoning, and multimodal tasks."
    max_tokens: 2048
    temperature: 0.7

  - name: "mistral"
    display_name: "Mistral ‚ö°"
    matrix_user: "@mistral:yourdomain.com"
    password_env: "MISTRAL_BOT_PASSWORD"
    backend: "ollama"
    api_url: "http://ollama:11434"
    model: "mistral:7b"
    system_prompt: "You are Mistral, fast and efficient. You give concise, accurate answers without unnecessary fluff."
    max_tokens: 1024
    temperature: 0.5

