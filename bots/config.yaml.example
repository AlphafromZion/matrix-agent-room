# Conversation context ‚Äî how many recent messages each bot sees when responding.
# Higher values give more context but use more tokens per request.
context_window: 10

# Trigger settings
triggers:
  mention_only: true    # Only respond when @mentioned by name
  allow_dm: true        # Respond to direct messages without @mention

# Rate limiting (per user)
rate_limit:
  max_requests: 10      # Max requests per window
  window_seconds: 60    # Window duration in seconds

# Room settings (for auto-creation, optional)
room:
  name: "AI Team"
  topic: "Multi-model AI collaboration room"
