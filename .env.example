# matrix-agent-room environment configuration
# Copy this to .env and fill in your values

# =============================================================================
# DOMAIN & NETWORKING
# =============================================================================
# Your domain name (used for Matrix user IDs: @user:yourdomain.com)
DOMAIN=yourdomain.com

# Synapse server name (usually same as DOMAIN)
SYNAPSE_SERVER_NAME=yourdomain.com

# Element Web URL (for CORS and well-known)
ELEMENT_URL=http://localhost:8080

# =============================================================================
# SYNAPSE (Matrix Homeserver)
# =============================================================================
# Registration shared secret (generate with: openssl rand -hex 32)
SYNAPSE_REGISTRATION_SHARED_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# Macaroon secret key (generate with: openssl rand -hex 32)
SYNAPSE_MACAROON_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# Form secret (generate with: openssl rand -hex 32)
SYNAPSE_FORM_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# =============================================================================
# POSTGRESQL
# =============================================================================
POSTGRES_DB=synapse
POSTGRES_USER=synapse
POSTGRES_PASSWORD=CHANGE_ME_USE_A_STRONG_PASSWORD

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
# Path to bot config file (inside container)
BOT_CONFIG=/app/config.yaml

# Log level: DEBUG, INFO, WARNING, ERROR
BOT_LOG_LEVEL=INFO

# =============================================================================
# OLLAMA (Local Models)
# =============================================================================
# Ollama API endpoint (if running Ollama separately, change this)
OLLAMA_URL=http://ollama:11434

# =============================================================================
# CLOUD API KEYS (Optional â€” only if using cloud backends)
# =============================================================================
# OpenAI API key (for GPT models)
# OPENAI_API_KEY=sk-your-key-here

# Anthropic API key (for Claude models)
# ANTHROPIC_API_KEY=your-key-here

# Generic OpenAI-compatible API key
# CUSTOM_API_KEY=your-key-here
